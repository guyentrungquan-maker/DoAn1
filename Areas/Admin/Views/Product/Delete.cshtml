@model Flower.Models.TbProduct

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_layoutAdmin.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Xóa sản phẩm</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">General Form</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="card card-success">
                        <div class="card-header">
                            <h3 class="card-title">Bạn chắc chắn muốn xóa sản phẩm này ?</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form asp-action="Delete">
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="ProductName">Tên sản phẩm : </label>
                                    @Model?.ProductName
                                </div>

                                <div class="form-group">
                                    <label asp-for="Price">Giá cả : </label>
                                    @Model?.Price VNĐ
                                </div>

                                <div class="form-group">
                                    <label asp-for="Description">Mô Tả : </label>
                                    @Html.Raw(Model?.Description)
                                </div>

                                <div class="form-group">
                                    <label asp-for="Image">Ảnh sản phẩm :</label>
                                    <div class="mt-2">
                                        <img src="@Model?.Image" alt="Ảnh sản phẩm" class="img-fluid" style="max-width: 100px; height: auto;" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label asp-for="IsActive">Sản phẩm mới :</label>
                                    @if (Model?.IsNew == true)
                                    {
                                        <i class="fas fa-check-circle text-success"></i> <span>Là sản phẩm mới</span>
                                    }
                                    else
                                    {
                                        <i class="fas fa-times-circle text-danger"></i> <span>Không phải sản phẩm mới</span>
                                    }
                                </div>


                                <div class="form-group">
                                    <label asp-for="IsActive">Tình trạng sản phẩm :</label>
                                    @if (Model?.IsActive == true)
                                    {
                                        <i class="fas fa-check-circle text-success"></i> <span>Còn hàng</span>
                                    }
                                    else
                                    {
                                        <i class="fas fa-times-circle text-danger"></i> <span>Hết hàng</span>
                                    }
                                </div>

                                <div class="d-flex mt-3">
                                    <div class="form-group mr-2">
                                        <button type="submit" class="btn btn-success rounded-pill">Xóa</button>
                                    </div>

                                    <div class="form-group">
                                        <a type="type" class="btn btn-danger rounded-pill mr-3" asp-action="Index">Quay Lại</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>